{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Auto Commit and Push",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-NoProfile",
                "-Command",
                "Set-Location -Path \"${workspaceFolder}\"; git add -A; git commit -m \"Automated commit on $(Get-Date -Format 'yyyy-MM-dd HH:mm:ss')\"; git push origin master"
            ],
            "problemMatcher": [],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "runOptions": {
                "runOn": "folderOpen"
            }
        }
    ]
}
